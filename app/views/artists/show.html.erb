<div class = "container">
  <h2 class="text-center"><%= @artist.name %> - Songs</h2>
    <nav class="text-center">
      <%= link_to "Add a new song to this artist", new_artist_song_path(@artist.id), class: "btn" %>
      <%= link_to "Delete this artist and all its songs", artist_path(@artist.id), class: "btn", method: :delete, data: { confirm: 'Are you sure you want to delete this artist + songs?' } %>
      <%= link_to "Go back to all artists", artists_path, class: "btn" %>
    </nav>
    <hr>
    <% if @artist.songs.any?  %>
      <div class = "row">
        <% @artist.songs.each do |song| %>
      <div class="col-md-3 box text-center">
        <p>Name: <%= song.name %></p>
        <p>Album: <%= song.album %></p>
        <p>Release year: <%= song.release_date %></p>
        <hr>
        <%= link_to "Delete this song", artist_song_path(@artist.id, song.id), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure you want to delete this song?' } %>
        <br>
      </div>
      <% end %>
      <% else %>
        <p>This artist doesn't have any songs</p>
      <% end %>
    </div>
</div>
