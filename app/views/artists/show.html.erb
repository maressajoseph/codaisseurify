<div class = "container-fluid bannerr"><br>
  <h2 class="text-center"><%= @artist.name %> - Songs</h2>
    <nav class="text-center">
      <%= link_to "Delete all songs from this artist ", artist_song_destroy_all_path(@artist.id), class: "btn", method: :delete, remote: true, data: { confirm: "You really want to delete all songs?" } %>
      <%= link_to " Delete this artist and all its songs ", artist_path(@artist.id), class: "btn", method: :delete, data: { confirm: 'Are you sure you want to delete this artist + songs?' } %>
      <%= link_to " ", artists_path, class: "btn glyphicon glyphicon-arrow-left" %>
    </nav>
  <br>
</div>
<div class="box">
  <% if @artist.songs.any?  %>

    <div class = "row">
      <ul>
          <div class="col-xs-3 songs">
            <p>NAME</p>
          </div>
          <div class="col-xs-3 songs">
            <p>ALBUM</p>
          </div>
          <div class="col-xs-2 songs">
            <p>RELEASE YEAR</p>
          </div>
          <div class="col-xs-2 songs">
            <p>DELETE THIS SONG</p>
          </div>
        </div>
        <br>
            <div class = "row">
              <ul>
          <% @artist.songs.each do |song| %>
            <div class="col-xs-3 songs">
              <p><%= song.name %></p>
            </div>
            <div class="col-xs-3 songs">
              <p><%= song.album %></p>
            </div>
            <div class="col-xs-2 songs">
              <p><%= song.release_date %></p>
            </div>
            <div class="col-xs-2 songs">
              <p><%= link_to "", artist_song_path(@artist.id, song.id), class: "glyphicon glyphicon-trash", method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this song?' } %></p>
            </div>
          <% end %>
        </ul>
  </div>
  <% else %>
    <br><p>This artist doesn't have any songs</p>
  <% end %>
</div>
<%= render 'songs/new', artist: @artist, song: @artist.songs.new %>
